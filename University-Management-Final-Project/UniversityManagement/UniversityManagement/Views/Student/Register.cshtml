                    @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                    <input type="submit" value="Register" class="btn btn-success btn-block" />
                    <br />
                </div>
            </div>
        </div>
    </fieldset>

    
</div>
