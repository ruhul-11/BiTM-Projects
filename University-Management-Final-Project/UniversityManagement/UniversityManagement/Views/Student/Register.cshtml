@using Vereyon.Web
@model UniversityManagement.Models.Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

@using (Html.BeginForm()) 
{
   
<div class="form-horizontal">

